*main.cpp* (Main Programa)
cpp
#include <iostream>
#include "functions.h"

using namespace std;

const int lin = 5, col = 5, slin = 3, scol = 2;

int main() {
    int tab[lin][col];
    int nav[slin][scol];
    int tiro[2];
    int tent = 0, exite = 0;

    int op = 0;

    iniciaTab(tab);
    iniciaNav(nav);

    do {
        // ... (resto da função principal permanece a mesma) 
    } while (op != 5);

    return 0;
}


*functions.h* (cabeçario do arquivo - Função Declarados)
cpp
#ifndef FUNCTIONS_H
#define FUNCTIONS_H

void iniciaTab(int tab[][5]);
void mostraTab(int tab[][5]);
void iniciaNav(int nav[][2]);
void efetuaTiro(int tiro[]);
bool verificaTiro(int tiro[], int nav[][2]);
void ajuda(int tiro[], int nav[][2], int tent);

#endif


